{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDirs": ["src"],
    "outDir": "dist",
    "module": "es2022",
    "target": "es2022",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "@types/jest", "@quramy/jest-prisma"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "transform": "tsc-alias"
      }
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "outputExtension": ".js"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
